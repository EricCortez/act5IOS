// structura
struct pantalla {
    var alto:Int
    var ancho:Int
    init(alto:Int,ancho:Int){
        self.alto=alto
        self.ancho=ancho
    }

    func reso()->(Int,Int){
        return (self.alto,self.ancho)
    }
}
var tele=pantalla(alto:10,ancho:10)
tele.reso()

// extension
extension Int {
var segundos:Int{
    return self*3600
}

   

}
    
extension String {
    	
    var diasele:String{
        switch self {
        case "Domingo":
     return String(1)
            case "Lunes":
            return String(2)
            case "MArtes":
            return String(3)
            case "Miercoles":
            return String(4)
            case "Jueves":
            return String(5)
            case "Viernes":
            return String(6)
            case "Sabado":
            return String(7)
        default:
            return "Ese no es un dia "
        }
    }
     }
//horas a segundos
7.segundos
"Sabado".diasele

